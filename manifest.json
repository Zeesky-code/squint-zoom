{
    "manifest_version": 3,
    "name": "Squint Zoom",
    "version": "1.0.0",
    "description": "Automatically adjusts page zoom when you squint",
    "permissions": [
        "offscreen",
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "sandbox": {
        "pages": [
            "sandbox.html"
        ]
    }
}